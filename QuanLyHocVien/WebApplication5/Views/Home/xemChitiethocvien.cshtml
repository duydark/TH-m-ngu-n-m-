@model WebApplication5.Models.lylich
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hiển thị học viên</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <h3>Thông tin học viên</h3>
        <p>
            <a class="btn btn-success" href="@Url.Content("/Home/Index")">Trở về</a>
        </p>
    </div>
    <div class="row">
        <div class="col-md-2 font-weight-bold">Mã số học viên: </div>
        <div class="col-md-4">@Model.mshv</div>
        <div class="col-md-2 font-weight-bold">Tên họ c viên: </div>
        <div class="col-md-4">@Model.tenhv</div>
        <div class="col-md-2 font-weight-bold">Ngày sinh: </div>
        <div class="col-md-4">@Model.ngaysinh.Value.ToShortDateString()</div>
        <div class="col-md-2 font-weight-bold">Phái: </div>
        <div class="col-md-4">@{ string strPhai = Model.phai.Value ? "Nam" : "Nữ";}</div>
        <div class="col-md-2 font-weight-bold">Mã lớp: </div>
        <div class="col-md-4">@Model.malop</div>
        <div class="col-md-2 font-weight-bold">Tên lớp: </div>
        <div class="col-md-4">@Model.lop.tenlop</div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Mã môn học</th>
                <th>Tên môn học</th>
                <th>Số tiết</th>
                <th>Điểm thi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.diemthis)
            {
                <tr>
                    <td>@item.msmh</td>
                    <td>@item.monhoc.tenmh</td>
                    <td>@item.monhoc.sotiet</td>
                    <td>@item.diem</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>